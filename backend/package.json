{
  "name": "@litemaas/backend",
  "version": "workspace",
  "description": "LiteMaaS Backend Service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts | pino-pretty",
    "dev:logged": "mkdir -p ../logs && tsx watch src/index.ts | pino-pretty | tee ../logs/backend.log",
    "dev:oauth": "env-cmd -f .env.oauth.local tsx watch src/index.ts | pino-pretty",
    "dev:oauth:logged": "mkdir -p ../logs && env-cmd -f .env.oauth.local tsx watch src/index.ts | pino-pretty | tee ../logs/backend.log",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:security": "vitest run tests/security",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:perf": "k6 run tests/performance/load-test.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "clean": "rimraf dist coverage .tsbuildinfo",
    "db:seed": "tsx src/scripts/seed-data.ts",
    "db:setup": "npm run db:seed",
    "test:db:reset": "tsx tests/helpers/db-reset-script.ts",
    "test:db:setup": "npm run test:db:reset && echo 'Test database ready'",
    "script:recalculate-cache": "tsx src/scripts/recalculate-usage-cache.ts",
    "reset-user-properties": "tsx ../scripts/reset-user-properties.ts",
    "logs": "tail -f ../logs/backend.log",
    "logs:clear": "rm -f ../logs/backend.log"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/env": "^4.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/oauth2": "^7.8.0",
    "@fastify/postgres": "^5.2.2",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@sinclair/typebox": "^0.32.15",
    "axios": "^1.11.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.5.0",
    "fastify": "^4.26.1",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.9.3",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-v8": "^1.3.1",
    "env-cmd": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1"
  }
}
